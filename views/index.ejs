       }

       /* Navbar Links */
       .navbar a {
              color: #000;
              text-decoration: none;
              font-size: 0.9rem;
              font-weight: bold;
              transition: color 0.3s ease, transform 0.3s ease;
              /* Added smooth transform effect */
