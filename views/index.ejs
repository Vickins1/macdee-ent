       }

       /* Hover Effect */
       .navbar a:hover {
              color: rgb(0, 149, 255);
              transform: translateX(5px);
              /* Added slight hover movement */
       }

       /* Hamburger Menu */
       .navbar-toggler {
              display: none;
              cursor: pointer;
              font-size: 1.5rem;
              color: #000000;
              margin-left: 20px;
       }

       /* Responsive Design */
