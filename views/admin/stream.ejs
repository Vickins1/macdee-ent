                                                                      <div class="media-body">
                                                                             <h3 class="dropdown-item-title">
                                                                                    <%= message.sender %>
                                                                             </h3>
                                                                             <p class="text-sm">
                                                                                    <%= message.content %>
                                                                             </p>
                                                                      </div>
                                                               </div>
                                                        </a>
                                                        <% }); %>
                                                               <% } else { %>
                                                                      <p>No messages available.</p>
                                                                      <% } %>
                                   </div>
                            </li>


                            <!-- Notifications Dropdown Menu -->
                            <li class="nav-item dropdown">
