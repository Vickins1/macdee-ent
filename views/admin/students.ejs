       <i class="fas fa-user-plus"></i> Enroll New Student
    </button>
    
<!-- Default box -->
<div class="card">
       <div class="card-header">
         <h3 class="card-title">Students</h3>
         <div class="card-tools">
           <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
             <i class="fas fa-minus"></i>
           </button>
         </div>
       </div>
       <div class="card-body p-0">
         <div class="table-responsive">
           <table class="table table-striped table-hover table-sm">
             <thead>
               <tr>
                 <th style="width: 4%">#</th>
                 <th style="width: 12%">Student Name</th>
                 <th style="width: 12%">Email</th>
                 <th style="width: 8%">Admission Number</th>
                 <th style="width: 8%">Phone Number</th>
                 <th style="width: 8%">Program</th>
                 <th style="width: 12%">Enrollment Date</th>
                 <th style="width: 8%">Paid Fee</th>
                 <th style="width: 10%">Actions</th>
               </tr>
             </thead>
             <tbody>
              <% studentsList.forEach(function(student, index) { %>
                     <tr>
                       <td><%= (currentPage - 1) * 10 + index + 1 %></td>
                       <td><%= student.name %></td>
                       <td><%= student.email %></td>
                       <td><%= student.admissionNumber %></td>
                       <td><%= student.phoneNumber %></td>
                       <td><%= student.program %></td>
                       <td><%= student.formattedCreatedAt %></td>
                       <td>KSh <%= student.paidFee.toLocaleString() %></td>


                       <td class="text-right">
                            <div class="d-flex justify-content-between">
                              <!-- View Button -->
                              <a class="btn btn-primary btn-sm" style="width: 40px;" data-toggle="modal" data-target="#viewModal<%= student.id %>">
                                <i class="fas fa-folder"></i>
                              </a>
                          
                              <!-- Edit Button -->
                              <a class="btn btn-info btn-sm" style="width: 40px;" data-toggle="modal" data-target="#editModal<%= student.id %>">
                                <i class="fas fa-pencil-alt"></i>
                              </a>
                          
                              <!-- Delete Button -->
                              <a class="btn btn-danger btn-sm" style="width: 40px;" data-toggle="modal" data-target="#deleteModal<%= student.id %>">
                                <i class="fas fa-trash"></i>
                              </a>
                            </div>
                          </td>
                          
                          <!-- View Modal -->
                          <div class="modal fade" id="viewModal<%= student.id %>" tabindex="-1" role="dialog" aria-labelledby="viewModalLabel<%= student.id %>" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                              <div class="modal-content">
                                <div class="modal-header">
                                  <h5 class="modal-title" id="viewModalLabel<%= student.id %>">View Student</h5>
                                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                  </button>
                                </div>
                                <div class="modal-body">
                                          <p><strong>Name: <%= student.name %></strong></p>
                                          <p><strong>Email:</strong> <%= student.email %></p>
                                          <p><strong>Admission Number:</strong> <%= student.admissionNumber %></p>
                                          <p><strong>ID Number:</strong> <%= student.idNumber %></p>
                                          <p><strong>Date of Birth:</strong> <%= new Date(student.dateOfBirth).toLocaleDateString() %></p>
                                          <p><strong>Next of Kin:</strong></p>
                                          <p><strong>Name:</strong> <%= student.nextOfKin.name %></p>
                                          <p><strong>Contact:</strong> <%= student.nextOfKin.contact %></p>
                                          <p><strong>Phone Number:</strong> <%= student.phoneNumber %></p>
                                          <p><strong>Program:</strong> <%= student.program %></p>
                                          <p><strong>Expected Fee:</strong> KSh <%= student.expectedFee.toLocaleString() %></p>
                                          <p><strong>Paid Fee:</strong> KSh <%= student.paidFee.toLocaleString() %></p>
                                          <p><strong>Enrollment Date:</strong> <%= new Date(student.enrollmentDate).toLocaleDateString() %></p>
                                </div>
                                <div class="modal-footer">
                                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                </div>
                              </div>
                            </div>
                          </div>
                          
                          <!-- Edit Modal -->
                          <div class="modal fade" id="editModal<%= student.id %>" tabindex="-1" role="dialog" aria-labelledby="editModalLabel<%= student.id %>" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                              <div class="modal-content">
                                <div class="modal-header">
                                  <h5 class="modal-title" id="editModalLabel<%= student.id %>">Edit Student</h5>
                                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                  </button>
                                </div>
                                <form action="/admin/students/edit/<%= student.id %>" method="POST">
                                  <div class="modal-body">
                                    <div class="row">
                                      <!-- Left Column -->
                                      <div class="col-md-6">
                                        <div class="form-group">
                                          <label for="studentName<%= student.id %>">Name</label>
                                          <input type="text" class="form-control" id="studentName<%= student.id %>" name="name" value="<%= student.name %>" required>
                                        </div>
                                        <div class="form-group">
                                          <label for="studentEmail<%= student.id %>">Email</label>
                                          <input type="email" class="form-control" id="studentEmail<%= student.id %>" name="email" value="<%= student.email %>" required>
                                        </div>
                                        <div class="form-group">
                                          <label for="studentIDNumber<%= student.id %>">ID Number</label>
                                          <input type="text" class="form-control" id="studentIDNumber<%= student.id %>" name="idNumber" value="<%= student.idNumber %>" required>
                                        </div>
                                        <div class="form-group">
                                          <label for="studentDOB<%= student.id %>">Date of Birth</label>
                                          <input type="date" class="form-control" id="studentDOB<%= student.id %>" name="dateOfBirth" value="<%= student.dateOfBirth.toISOString().split('T')[0] %>" required>
                                        </div>
                                        <div class="form-group">
                                          <label for="nextOfKinName<%= student.id %>">Next of Kin Name</label>
                                          <input type="text" class="form-control" id="nextOfKinName<%= student.id %>" name="nextOfKinName" value="<%= student.nextOfKin.name %>" required>
                                        </div>
                                        <div class="form-group">
                                          <label for="nextOfKinContact<%= student.id %>">Next of Kin Contact</label>
                                          <input type="text" class="form-control" id="nextOfKinContact<%= student.id %>" name="nextOfKinContact" value="<%= student.nextOfKin.contact %>" required>
                                        </div>
                                      </div>
                          
                                      <!-- Right Column -->
