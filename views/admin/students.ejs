                                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                  <a href="/admin/students/delete/<%= student.id %>" class="btn btn-danger">Delete</a>
                                </div>
                              </div>
                            </div>
                          </div>
                                          
                     </tr>
                   <% }) %>
                   
             </tbody>
           </table>
         </div>
       </div>
     </div>
     
