                                          <label for="studentPhone<%= student.id %>">Phone Number</label>
                                          <input type="text" class="form-control" id="studentPhone<%= student.id %>" name="phoneNumber" value="<%= student.phoneNumber %>" required>
                                        </div>
                                        <div class="form-group">
